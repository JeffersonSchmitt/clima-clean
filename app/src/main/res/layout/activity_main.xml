<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/rl"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <ImageView
      android:background="@mipmap/pattern"
      android:scaleType="centerCrop"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

  <RelativeLayout
      android:id="@+id/pesquisaLayout"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="70dp">
    <ImageView
        android:background="@color/black"
        android:scaleType="centerCrop"
        android:alpha="0.5"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
    <EditText
        android:id="@+id/pesquisa"
        android:hint="SÃ£o Paulo, BR"
        android:layout_below="@+id/toolbar"
        android:textAllCaps="true"
        android:imeActionId="01"
        android:imeActionLabel="Buscar"
        android:singleLine="true"
        android:textSize="20sp"
        android:drawablePadding="@dimen/margin_small"
        android:padding="@dimen/margin_default"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
  </RelativeLayout>
  <android.support.v4.widget.SwipeRefreshLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/refresh"
      android:layout_below="@+id/pesquisaLayout"
      android:layout_above="@+id/att"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"/>
  </android.support.v4.widget.SwipeRefreshLayout>
  <TextView
      android:textColor="@color/silver"
      android:layout_alignParentRight="true"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="@dimen/margin_small"
      android:layout_marginRight="@dimen/margin_default"
      android:id="@+id/att"
      android:textSize="12sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
</RelativeLayout>